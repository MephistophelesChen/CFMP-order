# CFMP微服务系统环境变量配置模板
# 复制此文件为 .env 并根据实际环境修改配置

# Nacos服务注册与发现配置
NACOS_SERVER=your_nacos_server:8848
NACOS_NAMESPACE=your_namespace
NACOS_USERNAME=your_username
NACOS_PASSWORD=your_password
NACOS_GROUP=DEFAULT_GROUP

# 服务IP配置
SERVICE_IP=your_service_ip

# 数据库配置 - 订单服务
ORDER_DB_NAME=cfmp_order
ORDER_DB_USER=your_db_user
ORDER_DB_PASSWORD=your_db_password
ORDER_DB_HOST=your_db_host
ORDER_DB_PORT=3306

# 数据库配置 - 支付服务
PAYMENT_DB_NAME=cfmp_payment
PAYMENT_DB_USER=your_db_user
PAYMENT_DB_PASSWORD=your_db_password
PAYMENT_DB_HOST=your_db_host
PAYMENT_DB_PORT=3306

# 数据库配置 - 通知服务
NOTIFICATION_DB_NAME=cfmp_notification
NOTIFICATION_DB_USER=your_db_user
NOTIFICATION_DB_PASSWORD=your_db_password
NOTIFICATION_DB_HOST=your_db_host
NOTIFICATION_DB_PORT=3306

# Django配置
DEBUG=True
SECRET_KEY=your-secret-key-here

# 服务端口配置（可选，也可以通过命令行指定）
ORDER_SERVICE_PORT=8001
PAYMENT_SERVICE_PORT=8002
NOTIFICATION_SERVICE_PORT=8003

# 日志级别
LOG_LEVEL=INFO

# 其他配置
ENVIRONMENT=development
